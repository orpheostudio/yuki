{
  "name": "Lívia - AmplaAI",
  "short_name": "Lívia",
  "description": "Tecnologia com alma gentil",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#128C7E",
  "orientation": "portrait",
  "scope": "/",
  "lang": "pt-BR",
  "categories": ["productivity", "utilities"],
  
  "icons": [
    {
      "src": "https://i.imgur.com/yLblPzu.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "https://i.imgur.com/GQgeU67.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "https://i.imgur.com/yLblPzu.png",
      "sizes": "144x144",
      "type": "image/png"
    },
    {
      "src": "https://i.imgur.com/GQgeU67.png",
      "sizes": "1024x1024",
      "type": "image/png"
    }
  ],

  // Configurações específicas para app nativo
  "prefer_related_applications": false,
  
  // Splash screen para app nativo (Android/iOS)
  "splash_screen": {
    "backgroundColor": "#ffffff",
    "image": "https://i.imgur.com/GQgeU67.png",
    "imageDark": "https://i.imgur.com/yLblPzu.png",
    "resizeMode": "contain"
  },

  // Configurações de plataforma específicas
  "android": {
    "package": "com.amplaai.lívia",
    "versionCode": 1,
    "permissions": [
      "INTERNET",
      "ACCESS_NETWORK_STATE"
    ],
    "allowMixedContent": true,
    "webContentsDebuggingEnabled": false
  },

  "ios": {
    "scheme": "liviaapp",
    "target": "12.0",
    "permissions": {
      "Camera": "Usada para funcionalidades de realidade aumentada",
      "Microphone": "Usada para comandos de voz",
      "Photos": "Usada para upload de imagens"
    },
    "usesIonCloud": false
  },

  // Capacitor/Cordova specific
  "cordova": {
    "preferences": {
      "ScrollEnabled": "false",
      "BackupWebStorage": "none",
      "SplashMaintainAspectRatio": "true",
      "FadeSplashScreenDuration": "300",
      "SplashShowOnlyFirstTime": "false",
      "SplashScreen": "screen",
      "SplashScreenDelay": "3000"
    }
  },

  // Configurações de push notification
  "push": {
    "presentationOptions": ["badge", "sound", "alert"]
  },

  // Configurações de segurança
  "content_security_policy": "script-src 'self' 'unsafe-inline' 'unsafe-eval' https:; object-src 'self'",
  
  // Features para app-like experience
  "features": [
    "Cross Platform",
    "fast",
    "simple",
    "Offline Capabilities"
  ],

  // Configurações de cache
  "cache_busting_mode": "version",
  
  // URL do service worker (importante para PWA)
  "serviceworker": {
    "src": "service-worker.js",
    "scope": "/",
    "use_cache": true
  },

  // Configurações de tela
  "screen_sizes": {
    "mobile": "360x640",
    "tablet": "768x1024",
    "desktop": "1280x720"
  }
}